
@{
    Layout = null;
}
@using HandmadeShop.Models.ViewModel;
@model ListViewModel


@foreach (var item in Model.Cart.Items)
{
    <div class="single-cart-item">
        <div class="cart-img">
            <a href="cart.html"><img style="height:5rem;" class="object-fit-cover" src="~/Images/@Model.ProductImages.FirstOrDefault(i => i.ProductID == item.Product.ID).ImagePath" alt=""></a>
        </div>
        <div class="cart-text">
            <h5 class="title"><a href="cart.html">@item.Product.Name</a></h5>
            <div class="cart-text-btn">
                <div class="cart-qty">
                    <span>Số lượng: @item.Quantity</span><br>
                    <span class="cart-price">Tổng tiền: @((item.Product.Price * item.Quantity).ToString("#,# VND"))</span>
                </div>
                <button type="button"><i class="ion-trash-b"></i></button>
            </div>
        </div>
    </div>
}


<div class="cart-price-total d-flex justify-content-between">
    <h5>Total :</h5>
    <h5>@Model.Cart.ComputeTotalValue().ToString("#,# VND")</h5>
</div>
<div class="cart-links d-flex justify-content-between">
    <a class="btn product-cart button-icon flosun-button dark-btn" asp-action="index" asp-controller="cart">View cart</a>
    <a class="btn flosun-button secondary-btn rounded-0" href="checkout.html">Checkout</a>
</div>

